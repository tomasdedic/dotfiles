{
    "name": "custom-snippets",
    "engines": {
        "vscode": "^1.11.0"
    },
    "contributes": {
        "snippets": [
            {
                "language": [
                    "plaintext",
                    "markdown",
                    "all"
                ],
                "path": "./global.json"
            },
            {
                "language": ["markdown", "rmd"],
                "path": "./markdown.json"
            },
            {
                "language": ["yaml" ],
                "path": "./yaml.json"
            }
        ]
    }
}

