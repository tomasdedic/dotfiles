{
    "workbench.colorTheme": "papercolor-vscode",
    "rsp-ui.enableStartServerOnActivation": [
        {
            "id": "redhat.vscode-server-connector",
            "name": "Red Hat RSP Server",
            "startOnActivation": true
        }
    ],
    "workbench.startupEditor": "newUntitledFile",
    "breadcrumbs.enabled": false,
    "editor.cursorBlinking": "solid",
    "editor.occurrencesHighlight": false,
    "go.autocompleteUnimportedPackages": true,
    "azure-event-hub-explorer.eventHubConnectionString": "Endpoint=sb://fluentd-eventhub-oshi.servicebus.windows.net/;SharedAccessKeyName=ss;SharedAccessKey=zeWz+9rSS/yWGanjcKrXMA2mAVCO0hL+MULhNWXHfkk=;EntityPath=kafka_output",
    "azure-event-hub-explorer.eventHubEntityName": "kafka_output",
    "vs-kubernetes": {
        "vs-kubernetes.minikube-path.linux": "/home/ts/.vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.integrated.allowChords": false,
    "extensions.ignoreRecommendations": true,
    "vim.leader": ",",
    "vim.enableNeovim": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": ["#8FBCBB", "#434C5E"],
    "vim.statusBarColors.insert": "#BF616A",
    "vim.statusBarColors.visual": "#B48EAD",
    "vim.statusBarColors.visualline": "#B48EAD",
    "vim.statusBarColors.visualblock": "#A3BE8C",
    "vim.statusBarColors.replace": "#D08770",
    "vim.statusBarColors.commandlineinprogress": "#8abee0",
    "vim.statusBarColors.searchinprogressmode": "#8abee0",
    "vim.statusBarColors.easymotionmode": "#8abee0",
    "vim.statusBarColors.easymotioninputmode": "#8abee0",
    "vim.statusBarColors.surroundinputmode": "#8abee0",

    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [{
        "before": ["j", "j"],
        "after": ["<Esc>"]
    }],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
          "before": ["<space>"],
          "commands": ["workbench.action.files.save"]
        },
        {
          "before": ["<leader>", "<space>"],
          "commands": [":nohl"]
        },
        {
          "before": ["<leader>", "w"],
          "commands": ["workbench.action.splitEditor"]
        },
        {
          "before": ["<leader>", "t"],
          "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
          "before": ["<leader>", "c"],
            "commands": [
                "editor.action.commentLine",
            ] 
        },
        {
            // "before": ["<leader>", ";"],
            "before": [";"],
            "commands": [
                "revealInExplorer",
            ],
        },
            {
            //   "before" : ["<leader>","a"],
              "before" : ["-"],
              "commands" : [
                "workbench.view.explorer"
              ]
            },
        {
            "before": ["<leader>", "r", "e"],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            "before": ["<leader>", "r", "f"],
            "commands": [
                "fileutils.renameFile"
            ]
        },
        {
            "before": ["<leader>", "o", "g"],
            "commands": [
                "workbench.action.showAllSymbols"
            ]
        },
        {
            "before": ["<leader>", "o", "o"],
            "commands": [
                "workbench.action.showEditorsInActiveGroup"
            ]
        },
        {
            "before": ["<leader>", "o", "p"],
            "commands": [
                "workbench.action.quickOpen"
            ]
        }
        ],
    
        "vim.visualModeKeyBindings": [
            {
                "before": ["<leader>", "c"],
                "commands": [
                    "editor.action.commentLine",
                    "extension.vim_escape"
                ],
            }
        ],
        "editor.minimap.enabled": false,
        "workbench.colorCustomizations" : {
            "terminal.foreground": "#000000",
            "terminal.background": "#ffffff",
            "statusBar.background": "#BF616A",
            "statusBar.noFolderBackground": "#BF616A",
            "statusBar.debuggingBackground": "#BF616A",
            "statusBar.foreground": "#434C5E"
        },
        "redhat.telemetry.enabled": true,
        "workbench.editor.enablePreview": false,
        "git.confirmSync": false,
        "gitlens.codeLens.authors.enabled": false,
        "gitlens.codeLens.recentChange.enabled": false,
        "gitlens.statusBar.enabled": false,
        "go.toolsManagement.autoUpdate": true,
        "files.associations": {
            "*.func": "shellscript"
          }
}